# FitCrew Focus - .env.example
# Bu dosyayi .env.local olarak kopyalayin ve gercek gizlileri SADECE lokalinizde/CI Secret'larinda saklayin.
# Etiketler: [ZORUNLU] production/CI icin zorunlu, [OPS] opsiyonel.

# --- Dagitim / CLI (dosyaya gercek sir YAZMAYIN) ---
# [OPS] Vercel/Supabase CLI icin sadece lokalinizde kullanin; repoya girmeyecek:
VERCEL_TOKEN=
VERCEL_ORG_ID=
VERCEL_PROJECT_ID=
SUPABASE_ACCESS_TOKEN=

# --- Uygulama cekirdegi ---
NODE_ENV=development
APP_URL=http://localhost:3000

# DB (lokal gelistirici varsayilani)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/fitcrew_focus
DIRECT_URL=postgresql://postgres:postgres@localhost:5432/fitcrew_focus?pgbouncer=true&connection_limit=1

# Prod (ornek; Vercel Secrets'a yazin, buraya degil):
# DATABASE_URL=postgresql://postgres:<SERVICE_ROLE_PW>@db.<PROJECT_REF>.supabase.co:5432/postgres
# DIRECT_URL=postgresql://postgres:<SERVICE_ROLE_PW>@db.<PROJECT_REF>.supabase.co:5432/postgres?pgbouncer=true&connection_limit=1

# Redis (opsiyonel)
REDIS_URL=redis://localhost:6379

# S3/Storage (MinIO veya Supabase Storage ile uyumlu)
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_ACCESS_KEY=local-access-key
S3_SECRET_KEY=local-secret
S3_BUCKET=fitcrew-focus

# Kimlik dogrulama
JWT_SECRET=local-dev-secret-key-please-change-123456
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Anti-abuse / Captcha
HCAPTCHA_SECRET=
NEXT_PUBLIC_HCAPTCHA_SITE_KEY=

# Web push / PWA
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
NEXT_PUBLIC_VAPID_PUBLIC_KEY=

# AI Entegrasyonu (lokalde bos birakilabilir)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
AI_COMMENT_CRON_SECRET=local-cron-secret

# E-posta / bekleme listesi (opsiyonel)
RESEND_API_KEY=
RESEND_FROM_EMAIL=
RESEND_WAITLIST_AUDIENCE_ID=
WAITLIST_WEBHOOK_SECRET=

# Rate limit ve "Treat Wheel" ayarlari (opsiyonel)
RATELIMIT_POSTS_PER_MIN=10
RATELIMIT_COMMENTS_PER_MIN=20
RATELIMIT_SPINS_PER_DAY=3

TREAT_SPIN_COOLDOWN_DAYS=4
TREAT_WEEKLY_LIMIT=1
EMA_WINDOW_DAYS=7
TREAT_MIN_WEIGHT_LOSS_KG=0.8
TREAT_MIN_WEIGHT_LOSS_PERCENT=1
TREAT_MIN_MEASUREMENT_DAYS=4
BONUS_WALK_DISTRIBUTION=25,25,20,15,10,5

PLATEAU_SPIN_ENABLED=true
PLATEAU_DAYS=14
PLATEAU_MIN_MEASUREMENTS=10
PLATEAU_EMA_RANGE_KG=0.3

NEW_USER_SPIN_ENABLED=true
NEW_USER_DAYS=7
NEW_USER_MIN_MEASUREMENTS=5
NEW_USER_MIN_WEIGHT_LOSS_KG=0.3

# Gelistirme kolayligi
SKIP_ENV_VALIDATION=false
